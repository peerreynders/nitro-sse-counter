{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Linting */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"outDir": "types"
	},
	"files": ["entry.js", "index.d.ts"]
}
